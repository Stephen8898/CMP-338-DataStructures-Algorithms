package demo;
public class TestTimes implements TesTimesInterface {

	private long[] testTimes = new long[10];
	private int currentIndex = 0;
	
	@Override
	public long getLastTestTime() {
		if (this.currentIndex > 0) {
			return testTimes[this.currentIndex - 1];
		} else {
			return 0;
		}
	}

	@Override
	public long[] getTestTimes() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public void resetTestTimes() {
		for (int i = 0 ; i < testTimes.length ; i++ ) {
			this.testTimes[i] = 0;
		}
		this.currentIndex = 0;
	}

	@Override
	public void addTestTime(long runTime) {
		if (this.currentIndex < testTimes.length) {
			testTimes[currentIndex] = runTime;
			currentIndex++;
		} else {
			// shit the array 1 to the left
			// add the runTime to testTimes[9]
		}
	}

	@Override
	public double getAverageTestTime() {
		// TODO Auto-generated method stub
		return 0;
	}

}
